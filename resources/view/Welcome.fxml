            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <ImageView fitHeight="68.0" fitWidth="350.0" layoutX="300.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/titulo.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="161.0" fitWidth="161.0" layoutX="135.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/logo_min.png" />
         </image>
      </ImageView>
		<Label layoutX="310.0" layoutY="75.0" text="%label.welcome">
			<font>
				<Font size="22.0" />
			</font>
		</Label>
		<Label fx:id="lblUser" layoutX="310.0" layoutY="105.0" text="Nombre de usuario">
			<font>
				<Font size="25.0" />
			</font>
		</Label>
		<ListView fx:id="listCourses" layoutX="75.0" layoutY="174.0" prefHeight="280.0" prefWidth="650.0" styleClass="list-view-intro" stylesheets="@/css/style.css">
